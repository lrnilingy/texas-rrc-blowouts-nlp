import numpy as np
import pandas as pd
from os import path
from PIL import Image
from wordcloud import WordCloud, STOPWORDS, ImageColorGenerator
import nltk
import matplotlib.pyplot as plt
% matplotlib inline

import pandas as pd
url = 'https://raw.githubusercontent.com/lrnilingy/texas-rrc-blowouts-nlp/master/scratch/rong/data/cleaned_values.csv'
df = pd.read_csv(url, error_bad_lines=False)

text = " ".join(Remarks for Remarks in df.Remarks)
print ("There are {} words in the combination of all remarks.".format(len(text)))

# Create stopword list:
import nltk
nltk.download('stopwords')
from nltk.corpus import stopwords 
from nltk.tokenize import word_tokenize 
  
stopwords = set(stopwords.words('english')) 

wordcloud = WordCloud(width=1600, height=800, max_words=50).generate(text)
plt.figure(figsize=(20, 10), facecolor='k')
plt.imshow(wordcloud)
plt.axis("off")
